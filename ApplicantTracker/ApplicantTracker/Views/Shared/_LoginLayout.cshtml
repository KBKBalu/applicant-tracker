<!DOCTYPE html>
<html lang="en">
@using System.Web.Optimization;
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicant Tracking</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angularui")
    <script src="~/Scripts/Librariesmin/Chart.min.js"></script>
    @Scripts.Render("~/bundles/angularlib")
    @Scripts.Render("~/bundles/app")
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/Libraries/metisMenu.min.js"></script>
    @*<script src="//cdnjs.cloudflare.com/ajax/libs/metisMenu/2.2.0/metisMenu.min.js"></script>*@
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">*@
    <script src="~/Scripts/Libraries/ui-bootstrap-tpls-0.10.0.js"></script>
    @*<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.10.0.js"></script>*@

</head>

<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapperlogin" style="text-align:center">
            <br />
            <br />
            <div style="align-content:center">
                &nbsp;&nbsp;<img src=~/Images/flat-avatar.png style="align-content:center" class=user-avatar>
            </div>
            <div></div>
            <div style="margin:330px auto auto 10px;text-align:left">
                <p style="font-family: 'Segoe UI'; font-size: 11px; text-align: left; color: white;">
                    Loalith Manpower Services
                    <br>
                    Next Gen Applicant Tracking<br>
                    <br>
                    Consultancy Services<br>
                    Recruitment Services<br>
                    Training Services<br>
                    Call	: 123456789<br>
                </p>
            </div>


        </div><!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <hr />
            <footer style="text-align:center">
                <p>&copy; @DateTime.Now.Year - Applicant Tracking</p>
            </footer>
        </div>

    </div>

    @*<div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Applicant Tracking</p>
            </footer>
        </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <script src="~/Scripts/sidebar_menu.js"></script>


</body>
</html>
